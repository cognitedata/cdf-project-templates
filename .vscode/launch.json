    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: build.py",
            "type": "python",
            "request": "launch",
            "program": "./cdf.py build",
            "args": [
                "--clean",
                "--env=local",
                "--override_env",
                "build"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: deploy.py",
            "preLaunchTask": "build",
            "type": "python",
            "request": "launch",
            "program": "./cdf.py deploy",
            "args": [
                //"--dry-run",
                "--drop",
                "--drop-data",
                "--env=local",
                "--include=data_models",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: clean.py",
            "preLaunchTask": "build",
            "type": "python",
            "request": "launch",
            "program": "./cdf.py clean",
            "args": [
                //"--dry-run",
                "--env=local",
                //"--include=data_models"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: cdf.py",
            "type": "python",
            "request": "launch",
            "program": "./cdf.py",
            "args": [
                "clean",
                "-r"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}