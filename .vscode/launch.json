    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: build.py",
            "type": "python",
            "request": "launch",
            "program": "./build.py",
            "args": [
                "--clean",
                "--env=local",
                "build"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: deploy.py",
            "preLaunchTask": "build",
            "type": "python",
            "request": "launch",
            "program": "./deploy.py",
            "args": [
                //"--dry-run",
                "--drop",
                "--drop-data",
                "--env=dev",
                "--include=data_models"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}