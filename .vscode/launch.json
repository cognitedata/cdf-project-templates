    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: build",
            "type": "python",
            "request": "launch",
            "program": "./cognite_toolkit/cdf.py",
            "args": [
                "--override-env",
                "--build-dir=build",
                "build",
                "--clean",
                "--env=local",
                "./cognite_toolkit/"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: deploy",
            "preLaunchTask": "build",
            "type": "python",
            "request": "launch",
            "program": "./cognite_toolkit/cdf.py",
            "args": [
                "deploy",
                //"--dry-run",
                "--drop",
                "--drop-data",
                "--env=local",
                "--include=data_models",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: clean",
            "preLaunchTask": "build",
            "type": "python",
            "request": "launch",
            "program": "./cognite_toolkit/cdf.py",
            "args": [
                "clean",
                //"--dry-run",
                "--env=local",
                //"--include=data_models"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: cdf.py",
            "type": "python",
            "request": "launch",
            "program": "./cognite_toolkit/cdf.py",
            "args": [
                "clean",
                "-r"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}